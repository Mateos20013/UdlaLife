<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:UdlaLife.Views"
       x:Class="UdlaLife.AppShell">

    <ShellContent Title="Iniciar Sesión" ContentTemplate="{DataTemplate local:LoginPage}" />

    <TabBar>
        <Tab Title="Inicio">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Estudiantes">
            <ShellContent ContentTemplate="{DataTemplate local:StudentsPage}" />
        </Tab>
        <!-- Agregar pestaña para tareas -->
        <Tab Title="Tareas">
            <ShellContent ContentTemplate="{DataTemplate local:SubirTareaPage}" />
        </Tab>
    </TabBar>
</Shell>
