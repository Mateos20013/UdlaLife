<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UdlaLife.Views.RegisterPage"
             Title="Registro">

    <StackLayout Padding="20" Spacing="20">
        <Label Text="Registro de Usuario" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />
        <Entry x:Name="NombreEntry" Placeholder="Nombre" TextColor="Black" PlaceholderColor="Gray" />
        <Entry x:Name="ApellidoEntry" Placeholder="Apellido" TextColor="Black" PlaceholderColor="Gray" />
        <Entry x:Name="EmailEntry" Placeholder="Correo Electrónico" TextColor="Black" PlaceholderColor="Gray" Keyboard="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Contraseña" TextColor="Black" PlaceholderColor="Gray" IsPassword="True" />
        <Picker x:Name="RolPicker" Title="Selecciona tu Rol">
            <Picker.Items>
                <x:String>Estudiante</x:String>
                <x:String>Profesor</x:String>
            </Picker.Items>
        </Picker>
        <Button Text="Registrarse" BackgroundColor="#800000" TextColor="White" Clicked="OnRegisterClicked" />
        <Button Text="Iniciar Sesión" BackgroundColor="LightGray" TextColor="Black" Clicked="OnLoginClicked" />
    </StackLayout>
</ContentPage>
