<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UdlaLife.Views.RegisterPage"
             Title="Registro">

    <StackLayout Padding="20" Spacing="20">
        <Label Text="Bienvenido a UdlaLife" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />
        <Entry Placeholder="Registra tu Nombre" TextColor="Black" PlaceholderColor="Gray" />
        <Entry Placeholder="Registra tu Apellido" TextColor="Black" PlaceholderColor="Gray" />
        <Entry Placeholder="Registra tu Correo" TextColor="Black" PlaceholderColor="Gray" Keyboard="Email" />
        <Entry Placeholder="Registra tu Contraseña" TextColor="Black" PlaceholderColor="Gray" IsPassword="True" />
        <Button Text="Registrarse" BackgroundColor="#800000" TextColor="White" Clicked="OnRegisterClicked" />
        <Button Text="Iniciar Sesión" BackgroundColor="LightGray" TextColor="Black" Clicked="OnLoginClicked" />
    </StackLayout>
</ContentPage>
