<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UdlaLife.Views.StudentsPage"
             Title="Lista de Estudiantes"
             BackgroundColor="White">

    <StackLayout Padding="20" Spacing="10">
        <Label Text="Estudiantes Registrados" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>

        <CollectionView ItemsSource="{Binding Estudiantes}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Spacing="10" Padding="10">
                        <Label Text="{Binding Nombre}" FontSize="18" />
                        <Label Text="{Binding Apellido}" FontSize="18" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Cargar Estudiantes" Command="{Binding LoadStudentsCommand}" BackgroundColor="#800000" TextColor="White"/>
    </StackLayout>
</ContentPage>
