<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:UdlaLife.ViewModels"
             x:Class="UdlaLife.Views.StudentsPage"
             x:DataType="local:EstudianteViewModel">

    <StackLayout>
        <Label Text="Lista de Estudiantes" FontSize="24" HorizontalOptions="Center"/>
        <CollectionView ItemsSource="{Binding Estudiantes}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Spacing="10" Padding="10">
                        <Label Text="{Binding Nombre}" FontSize="18" />
                        <Label Text="{Binding Apellido}" FontSize="18" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
