<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UdlaLife.Views.ProfessorsPage"
             Title="Página de Profesores">

    <StackLayout Padding="20" Spacing="20">
        <Label Text="Bienvenido a la Página de Profesores" 
               FontSize="24" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" />
        <Label Text="Aquí puedes gestionar las actividades relacionadas con los profesores." 
               HorizontalOptions="Center" />

        <StackLayout Padding="20">
            <Label Text="Página de Profesores" FontSize="24" HorizontalOptions="Center" />

            <!-- Botón para navegar a la pestaña de Tareas -->
            <Button Text="Ir a Tareas" Clicked="OnGoToTareasClicked"
                    BackgroundColor="Blue"
                    TextColor="White"
                    FontSize="18"
                    Margin="10" />
        </StackLayout>

        <!-- Botón para crear actividad -->
        <Button Text="Crear Actividad"
                Clicked="OnActividadesClicked"
                BackgroundColor="Green"
                TextColor="White"
                Margin="10"
                FontSize="18"/>
    </StackLayout>
</ContentPage>
