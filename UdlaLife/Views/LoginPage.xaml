<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UdlaLife.Views.LoginPage"
             BackgroundColor="White">

    <StackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Label Text="Iniciar Sesión" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>

        <Entry x:Name="EmailEntry" Placeholder="Ingresa tu Email" Keyboard="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Ingresa tu Contraseña" IsPassword="True" />

        <Button Text="Iniciar Sesión" BackgroundColor="#800000" TextColor="White" FontSize="18" Clicked="OnLoginClicked"/>
    </StackLayout>
</ContentPage>
