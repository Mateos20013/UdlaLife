<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UdlaLife.Views.LoginPage"
             Title="Iniciar Sesión">

    <StackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Label Text="Iniciar Sesión" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>
        <Entry x:Name="EmailEntry" Placeholder="Correo Electrónico" Keyboard="Email"/>
        <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True"/>
        <Button Text="Iniciar Sesión" BackgroundColor="#800000" TextColor="White" Clicked="OnLoginClicked"/>
    </StackLayout>
</ContentPage>
