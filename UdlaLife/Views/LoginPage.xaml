<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UdlaLife.Views.LoginPage"
             Title="Inicio de Sesión">

    <StackLayout Padding="20">
        <Label Text="Inicio de Sesión" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="EmailEntry" Placeholder="Correo electrónico" Keyboard="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True" />
        <Button Text="Iniciar Sesión" Clicked="OnLoginClicked" BackgroundColor="Red" TextColor="White" />
    </StackLayout>
</ContentPage>
