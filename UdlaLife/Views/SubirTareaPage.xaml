<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:UdlaLife.ViewModel"
             x:Class="UdlaLife.Views.SubirTareaPage"
             Title="Subir Tarea">

    <ContentPage.BindingContext>
        <local:EstudianteActividadesViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="20">
        <Label Text="Subir Tarea" FontSize="24" HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding Actividades}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Label Text="{Binding Titulo}" FontSize="18" />
                        <Label Text="{Binding Descripcion}" FontSize="14" />
                        <Button Text="Subir PDF" 
                                Command="{Binding SubirPdfCommand}" 
                                CommandParameter="{Binding .}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Label Text="Subir Tarea" FontSize="24" HorizontalOptions="Center" />

        <!-- Botón para seleccionar el archivo -->
        <Button Text="Seleccionar archivo PDF"
                Clicked="OnSeleccionarArchivoClicked" />

        <!-- Label para mostrar el nombre del archivo seleccionado -->
        <Label x:Name="ArchivoSeleccionadoLabel" 
               Text="Archivo no seleccionado" 
               FontSize="14" 
               HorizontalOptions="Center" 
               VerticalOptions="Center" />

        <!-- Botón para subir la tarea -->
        <Button Text="Subir Tarea" 
                Clicked="OnSubirTareaClicked" />
    </StackLayout>
</ContentPage>
