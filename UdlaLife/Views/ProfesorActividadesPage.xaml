<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UdlaLife.Views.ProfesorActividadesPage"
             Title="Crear Actividad">
    <StackLayout Padding="20">
        <Label Text="Crear una nueva actividad" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="TituloEntry" Placeholder="Título de la actividad" />
        <Editor x:Name="DescripcionEditor" Placeholder="Descripción de la actividad" />

        <Button Text="Crear Actividad" Clicked="OnSaveActividadClicked" />
    </StackLayout>
</ContentPage>
