<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UdlaLife.Views.MainPage"
             BackgroundColor="White">

    <StackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Image Source="logo.png" HorizontalOptions="Center" HeightRequest="200" />
        <Label Text="Bienvenido a UdlaLife" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>

        <Button Text="Estudiante" BackgroundColor="#800000" TextColor="White" FontSize="18" Clicked="OnEstudianteClicked"/>
        <Button Text="Profesor" BackgroundColor="#800000" TextColor="White" FontSize="18" Clicked="OnProfesorClicked"/>

        <Label Text="¿No tienes una cuenta?" HorizontalOptions="Center" />
        <Button Text="Registrarse" BackgroundColor="#800000" TextColor="White" FontSize="18" Clicked="OnRegisterClicked"/>
    </StackLayout>
</ContentPage>
