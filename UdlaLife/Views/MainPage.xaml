<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UdlaLife.Views.MainPage"
             BackgroundColor="White"
             Title="Login">
    <StackLayout Padding="20" Spacing="20" VerticalOptions="CenterAndExpand">
        <!-- Imagen de cabecera -->
        <Image Source="logo_placeholder.png" HeightRequest="150" Aspect="AspectFit" />

        <!-- Título principal -->
        <Label Text="Bienvenido a UdlaLife"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- Botones de rol -->
        <Button Text="Estudiante"
                FontSize="18"
                TextColor="White"
                BackgroundColor="#A10000"
                CornerRadius="25"
                HeightRequest="50"
                Clicked="OnStudentClicked" />
        <Button Text="Profesor"
                FontSize="18"
                TextColor="White"
                BackgroundColor="#A10000"
                CornerRadius="25"
                HeightRequest="50"
                Clicked="OnProfessorClicked" />

        <!-- Botón de registro -->
        <Label Text="¿No tienes una cuenta?"
               FontSize="14"
               HorizontalOptions="Center" />
        <Button Text="Regístrate"
                FontSize="14"
                TextColor="Black"
                BackgroundColor="#E0E0E0"
                CornerRadius="25"
                HeightRequest="40"
                Clicked="OnRegisterClicked" />
    </StackLayout>
</ContentPage>
