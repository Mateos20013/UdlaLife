<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UdlaLife.Views.MainPage"
             BackgroundColor="White"
             Title="Login">

    <StackLayout Padding="20" Spacing="20" VerticalOptions="CenterAndExpand">
        <!-- Imagen de cabecera -->
        <Image Source="https://www.bicubik.photo/web/wp-content/uploads/2017/01/MG_7741.jpg" 
               HeightRequest="200" 
               Aspect="AspectFill" 
               HorizontalOptions="Center" />

        <!-- Título principal (más grande) -->
        <Label Text="Bienvenido a UdlaLife"
               FontSize="36"
               FontAttributes="Bold"
               HorizontalOptions="Center" 
               Margin="0, 20" />

        <!-- Botones de rol -->
        <Button Text="Estudiante"
                FontSize="22"
                TextColor="White"
                BackgroundColor="#A10000"
                CornerRadius="25"
                HeightRequest="60"
                HorizontalOptions="FillAndExpand"
                Clicked="OnStudentClicked" />

        <Button Text="Profesor"
                FontSize="22"
                TextColor="White"
                BackgroundColor="#A10000"
                CornerRadius="25"
                HeightRequest="60"
                HorizontalOptions="FillAndExpand"
                Clicked="OnProfessorClicked" />

        <!-- Botón de registro -->
        <Label Text="¿No tienes una cuenta?"
               FontSize="16"
               HorizontalOptions="Center" 
               Margin="0, 20" />

        <Button Text="Regístrate"
                FontSize="16"
                TextColor="Black"
                BackgroundColor="#E0E0E0"
                CornerRadius="25"
                HeightRequest="50"
                HorizontalOptions="FillAndExpand"
                Clicked="OnRegisterClicked" />
    </StackLayout>
</ContentPage>
