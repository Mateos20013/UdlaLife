<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UdlaLife.Views.MainPage"
             Title="Bienvenido">

    <StackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Label Text="Bienvenido a UdlaLife" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />
        <Button Text="Estudiante" BackgroundColor="#800000" TextColor="White" Clicked="OnEstudianteClicked" />
        <Button Text="Profesor" BackgroundColor="#800000" TextColor="White" Clicked="OnProfesorClicked" />
        <Button Text="Registrarse" BackgroundColor="LightGray" TextColor="Black" Clicked="OnRegistrarseClicked" />
    </StackLayout>
</ContentPage>
